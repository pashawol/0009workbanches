
mixin item-tr(t1,t2)
	tr
		td.text-secondary= t1
		td.fw-500= t2
mixin item-prod(sl, i, a="#", t="Верстак слесарный ВМ_1216")
	+b.item-prod
		+e.img-wrap(href= a)
			-
				let src= (sl=="sl" ? '#' :`img/@2x/prod-${i}.jpg`)
				let lazy = (sl=="sl" ? `img/@2x/prod-${i}.jpg`: null)
			img.res-i(src= src data-lazy= lazy , alt="") 
		+e.caption
			+e.title
				a(href= a)= t
			table
				block
			+btn-accent('Подробнее', a)
