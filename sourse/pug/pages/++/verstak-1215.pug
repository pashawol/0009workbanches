block variables
	- let  mainPage= null
block title
	- let  title= 'Верстак слесарный ВМ_1215'
	title= title
block description 
	meta(name="description", content= "Верстак слесарный ВМ_1215 для слесарных работ и бережного хранения инструмента" )

