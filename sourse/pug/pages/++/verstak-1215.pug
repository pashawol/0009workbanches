	meta(name="Keywords", content= "Верстак слесарный ВМ_1215, верстак 1215, верстак вм 1215, верстак слесарный, верстак слесарный +для гаража, верстак слесарный вс, верстак слесарный однотумбовый, верстак слесарный металлический, верстак слесарный металлический купить, верстак слесарный размеры, верстак слесарный цена, верстаки слесарные металлические +для гаража, купить верстак слесарный" )
block pagecontent 
	//- +mob-mnu()
	+header()
		+top-line()
		+top-nav()
	.container
		nav(aria-label='breadcrumb')
			ol.breadcrumb(itemscope='itemscope', itemtype='http://schema.org/BreadcrumbList')
				li.breadcrumb-item(itemprop='itemListElement', itemscope='itemscope', itemtype='http://schema.org/ListItem')
					a(href='/', itemprop='item')
						span(itemprop='name') Главная
						meta(itemprop='position', content='1')
				
				li.breadcrumb-item(itemprop='itemListElement', itemscope='itemscope', itemtype='http://schema.org/ListItem')
					a(href='/03-catalog.html', itemprop='item')
						span(itemprop='name') Каталог
						meta(itemprop='position', content='2')
				
				li.breadcrumb-item(itemprop='itemListElement', itemscope='itemscope', itemtype='http://schema.org/ListItem')
					a(href='/verstaki.html', itemprop='item')
						span(itemprop='name') Верстаки слесарные
						meta(itemprop='position', content='3')
				
				li.breadcrumb-item.active(itemprop='itemListElement', itemscope='itemscope', itemtype='http://schema.org/ListItem')
					a(href='#', itemprop='item')
						span(itemprop='name')= title
						meta(itemprop='position', content='4')
	//- Меняем номер верстака
	+s-prod-head-1215()(class="section-border ") 
	+s-catalog('prodPage')
		+b.section-title.text-center
			h2 #[strong Самые популярные модели] слесарных верстаков
	+s-other-products.section-border
	+s-form05
	+footer()